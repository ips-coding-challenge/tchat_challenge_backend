{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "JWT_SECRET",
    "authStrategies": ["jwt", "local"],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "APP_URL",
      "issuer": "ips-coding-challenge",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "redirect": "http://localhost:PORT",
      "github": {
        "key": "GITHUB_KEY",
        "secret": "GITHUB_SECRET",
        "scope": ["email"]
      }
    }
  },
  "mongodb": "mongodb://localhost:27017/training_feather"
}
